{
  "name": "bob-ts",
  "version": "3.0.1",
  "homepage": "https://github.com/PabloSzx/bob-esbuild",
  "bugs": "https://github.com/PabloSzx/bob-esbuild/issues",
  "repository": {
    "type": "git",
    "url": "https://github.com/PabloSzx/bob-esbuild",
    "directory": "packages/bob-ts"
  },
  "license": "MIT",
  "author": "PabloSzx <pablosaez1995@gmail.com>",
  "exports": {
    ".": {
      "require": "./lib/index.js",
      "import": "./lib/index.mjs"
    },
    "./*": {
      "require": "./lib/*.js",
      "import": "./lib/*.mjs"
    }
  },
  "main": "lib/index.js",
  "module": "lib/index.mjs",
  "types": "lib/index.d.ts",
  "bin": {
    "bob-ts": "./bin/bob-ts.mjs",
    "bob-ts-watch": "./bin/bob-ts-watch.mjs"
  },
  "files": [
    "/bin",
    "/lib"
  ],
  "scripts": {
    "prepare": "node -r tsm self-build.ts",
    "postpublish": "gh-release"
  },
  "dependencies": {
    "bob-esbuild-plugin": "workspace:^3.1.3",
    "rollup": "^2.62.0"
  },
  "devDependencies": {
    "@rollup/plugin-json": "^4.1.0",
    "@types/node": "^17.0.4",
    "bob-esbuild-cli": "workspace:^3.0.1",
    "changesets-github-release": "^0.0.4",
    "commander": "^8.3.0",
    "esbuild": "^0.14.10",
    "execa": "^6.0.0",
    "globby": "^12.0.2",
    "rollup-plugin-delete": "^2.0.0",
    "rollup-plugin-node-externals": "^3.1.2",
    "rollup-plugin-tsconfig-paths": "^1.1.5",
    "tree-kill": "^1.2.2",
    "typescript": "^4.5.4"
  },
  "peerDependencies": {
    "@types/node": "*",
    "esbuild": ">=0.14.10",
    "typescript": "*"
  },
  "engines": {
    "node": "^12.20.0 || >=14.13.0"
  },
  "publishConfig": {
    "access": "public",
    "directory": "lib"
  },
  "typesVersions": {
    "*": {
      "lib/index.d.ts": [
        "lib/index.d.ts"
      ],
      "*": [
        "lib/*",
        "lib/*/index.d.ts"
      ]
    }
  }
}
