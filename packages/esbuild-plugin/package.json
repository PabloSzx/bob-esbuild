{
  "name": "bob-esbuild-plugin",
  "version": "2.1.0",
  "description": "bob-esbuild main plugin, based on https://github.com/egoist/rollup-plugin-esbuild",
  "repository": {
    "type": "git",
    "url": "https://github.com/PabloSzx/bob-esbuild",
    "directory": "packages/esbuild-plugin"
  },
  "license": "MIT",
  "author": "PabloSzx <pablosaez1995@gmail.com>",
  "exports": {
    ".": {
      "require": "./lib/index.js",
      "import": "./lib/index.mjs"
    },
    "./*": {
      "require": "./lib/*.js",
      "import": "./lib/*.mjs"
    }
  },
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "files": [
    "lib"
  ],
  "scripts": {
    "prepare": "tsup && pnpm -w types",
    "postpublish": "gh-release"
  },
  "dependencies": {
    "@rollup/pluginutils": "^4.1.1",
    "tsconfck": "^1.1.0"
  },
  "devDependencies": {
    "@types/node": "^16.11.1",
    "changesets-github-release": "^0.0.4",
    "esbuild": "^0.13.8",
    "rollup": "^2.58.0",
    "tsup": "^5.4.3"
  },
  "peerDependencies": {
    "@types/node": "*",
    "esbuild": "*",
    "rollup": "*"
  },
  "tsup": {
    "entryPoints": [
      "src/**/*.ts"
    ],
    "outDir": "lib",
    "clean": true,
    "format": [
      "cjs",
      "esm"
    ],
    "target": "es2019"
  }
}
