{
  "name": "bob-esbuild-plugin",
  "version": "4.0.0",
  "description": "bob-esbuild main plugin, based on https://github.com/egoist/rollup-plugin-esbuild",
  "repository": {
    "type": "git",
    "url": "https://github.com/PabloSzx/bob-esbuild",
    "directory": "packages/esbuild-plugin"
  },
  "license": "MIT",
  "author": "PabloSzx <pablosaez1995@gmail.com>",
  "exports": {
    ".": {
      "require": "./lib/index.js",
      "import": "./lib/index.mjs"
    },
    "./*": {
      "require": "./lib/*.js",
      "import": "./lib/*.mjs"
    }
  },
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "files": [
    "lib"
  ],
  "scripts": {
    "prepare": "tsup && bun self-build.ts",
    "postpublish": "gh-release"
  },
  "dependencies": {
    "@rollup/pluginutils": "^5.1.0"
  },
  "devDependencies": {
    "changesets-github-release": "^0.1.0",
    "esbuild": "^0.19.11",
    "rollup": "^2.79.1",
    "tsconfck": "^3.1.6",
    "tsup": "^8.0.1"
  },
  "peerDependencies": {
    "esbuild": ">=0.14.39",
    "rollup": "*"
  },
  "peerDependenciesMeta": {
    "esbuild": {
      "optional": true
    },
    "rollup": {
      "optional": true
    }
  },
  "publishConfig": {
    "access": "public",
    "directory": "lib",
    "linkDirectory": false
  },
  "tsup": {
    "entryPoints": [
      "src/**/*.ts"
    ],
    "outDir": "lib",
    "clean": true,
    "format": [
      "cjs",
      "esm"
    ],
    "target": "node12.20"
  }
}
