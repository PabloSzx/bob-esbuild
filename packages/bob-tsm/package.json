{
  "name": "bob-tsm",
  "version": "0.3.1",
  "homepage": "https://github.com/PabloSzx/bob-esbuild",
  "bugs": "https://github.com/PabloSzx/bob-esbuild/issues",
  "repository": {
    "type": "git",
    "url": "https://github.com/PabloSzx/bob-esbuild",
    "directory": "packages/bob-tsm"
  },
  "license": "MIT",
  "author": "PabloSzx <pablosaez1995@gmail.com>",
  "exports": {
    ".": {
      "import": "./lib/loader.mjs",
      "require": "./lib/require.js"
    },
    "./*": {
      "import": "./lib/*.mjs",
      "require": "./lib/*.js",
      "types": "./lib/*.d.ts"
    },
    "./config": "./config/index.js",
    "./package.json": "./package.json"
  },
  "bin": {
    "bob-tsm": "./bin/bob-tsm.mjs"
  },
  "files": [
    "lib",
    "config",
    "bin"
  ],
  "scripts": {
    "prepare": "node -r tsm build.ts",
    "dev": "bob-watch --watch=src -c \"pnpm prepare\"",
    "postpublish": "gh-release",
    "test": "node -r tsm build.ts && node ./test/test.cjs",
    "playground": "bob-watch --watch=src -c \"pnpm prepack && node bin/bob-tsm.mjs build.ts\""
  },
  "dependencies": {
    "chokidar": "^3.5.2",
    "commander": "^8.3.0",
    "semver": "^7.3.5",
    "tree-kill": "^1.2.2"
  },
  "devDependencies": {
    "@types/semver": "^7.3.9",
    "bob-watch": "workspace:^0.1.0",
    "esbuild": "^0.13.9",
    "execa": "^5.1.1"
  },
  "peerDependencies": {
    "esbuild": "*"
  },
  "engines": {
    "node": "^12.20.0 || >=14.13.0"
  }
}
