{
  "name": "bob-tsm",
  "version": "0.4.3",
  "homepage": "https://github.com/PabloSzx/bob-esbuild",
  "bugs": "https://github.com/PabloSzx/bob-esbuild/issues",
  "repository": {
    "type": "git",
    "url": "https://github.com/PabloSzx/bob-esbuild",
    "directory": "packages/bob-tsm"
  },
  "license": "MIT",
  "author": "PabloSzx <pablosaez1995@gmail.com>",
  "exports": {
    ".": {
      "import": "./lib/loader.mjs",
      "require": "./lib/require.js",
      "types": "./lib/index.d.ts"
    },
    "./*": {
      "import": "./lib/*.mjs",
      "require": "./lib/*.js",
      "types": "./lib/*.d.ts"
    },
    "./package.json": "./package.json"
  },
  "types": "lib/index.d.ts",
  "bin": {
    "bob-tsm": "./bin/bob-tsm.mjs"
  },
  "files": [
    "lib",
    "config",
    "bin"
  ],
  "scripts": {
    "dev": "node ../bob-watch/bin/bob-watch.mjs --watch=src -c \"pnpm i\"",
    "playground": "node ../bob-watch/bin/bob-watch.mjs --watch src playground -c \"pnpm prepare && node bin/bob-tsm.mjs playground/index.ts\"",
    "prepare": "node -r tsm build.ts",
    "postpublish": "gh-release",
    "test": "node -r tsm build.ts && c8 node -r tsm ./test/test.cjs"
  },
  "devDependencies": {
    "@types/semver": "^7.3.9",
    "bob-esbuild-plugin": "workspace:^3.1.3",
    "c8": "^7.11.0",
    "chokidar": "^3.5.2",
    "commander": "^8.3.0",
    "esbuild": "^0.14.10",
    "execa": "^6.0.0",
    "semver": "^7.3.5",
    "tree-kill": "^1.2.2",
    "typescript": "^4.5.4",
    "typescript-paths": "^1.2.6"
  },
  "peerDependencies": {
    "esbuild": ">=0.14.10",
    "typescript": ">=4.1.2"
  },
  "optionalDependencies": {
    "fsevents": "~2.3.2"
  },
  "engines": {
    "node": "^12.20.0 || >=14.13.0"
  },
  "publishConfig": {
    "access": "public",
    "directory": "lib"
  }
}
