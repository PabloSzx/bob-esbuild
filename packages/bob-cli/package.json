{
  "name": "bob-esbuild-cli",
  "version": "0.1.27",
  "homepage": "https://github.com/PabloSzx/bob-esbuild",
  "bugs": "https://github.com/PabloSzx/bob-esbuild/issues",
  "repository": {
    "type": "git",
    "url": "https://github.com/PabloSzx/bob-esbuild",
    "directory": "packages/bob-cli"
  },
  "license": "MIT",
  "author": "PabloSzx <pablosaez1995@gmail.com>",
  "exports": {
    ".": {
      "require": "./lib/index.js",
      "import": "./lib/index.mjs"
    },
    "./*": {
      "require": "./lib/*.js",
      "import": "./lib/*.mjs"
    }
  },
  "main": "lib/index.js",
  "module": "lib/index.mjs",
  "types": "lib/index.d.ts",
  "bin": {
    "bob-esbuild": "./bin/run.js"
  },
  "files": [
    "/bin",
    "/lib"
  ],
  "scripts": {
    "dev": "bob-esbuild watch",
    "prepare": "node -r esbuild-register self-build.ts",
    "postpublish": "gh-release"
  },
  "dependencies": {
    "@oclif/command": "^1.8.0",
    "@oclif/config": "^1.17.0",
    "@oclif/errors": "^1.3.5",
    "@oclif/parser": "^3.8.5",
    "@oclif/plugin-help": "^3.2.2",
    "bob-esbuild": "workspace:0.1.27"
  },
  "devDependencies": {
    "@oclif/dev-cli": "^1.26.0",
    "@types/node": "^16.3.0",
    "changesets-github-release": "^0.0.3",
    "esbuild-register": "^2.6.0",
    "globby": "^11.0.4",
    "rimraf": "^3.0.2",
    "ts-node": "^10.1.0",
    "typescript": "^4.3.5"
  },
  "engines": {
    "node": ">=12.0.0"
  },
  "oclif": {
    "commands": "./lib/commands",
    "bin": "bob",
    "plugins": [
      "@oclif/plugin-help"
    ]
  }
}
