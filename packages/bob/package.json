{
  "name": "bob-esbuild",
  "version": "4.0.3",
  "repository": {
    "type": "git",
    "url": "https://github.com/PabloSzx/bob-esbuild",
    "directory": "packages/bob"
  },
  "license": "MIT",
  "author": "PabloSzx <pablosaez1995@gmail.com>",
  "exports": {
    ".": {
      "require": "./lib/index.js",
      "import": "./lib/index.mjs"
    },
    "./*": {
      "require": "./lib/*.js",
      "import": "./lib/*.mjs"
    }
  },
  "main": "lib/index.js",
  "module": "lib/index.mjs",
  "types": "lib/index.d.ts",
  "files": [
    "lib"
  ],
  "scripts": {
    "build:types": "node -r tsm build-types.ts",
    "dev": "node -r tsm self-watch.ts",
    "prepare": "node -r tsm self-build.ts",
    "postpublish": "gh-release"
  },
  "dependencies": {
    "@pnpm/types": "^8.5.0",
    "bob-esbuild-plugin": "workspace:4.0.0",
    "rollup": "^2.79.1"
  },
  "devDependencies": {
    "@pnpm/exportable-manifest": "^3.1.2",
    "@rollup/plugin-json": "^4.1.0",
    "@types/folder-hash": "^4.0.2",
    "@types/fs-extra": "^9.0.13",
    "@types/lodash.get": "^4.4.7",
    "@types/node": "^18.7.9",
    "builtin-modules": "^3.3.0",
    "chalk": "^5.0.1",
    "changesets-github-release": "^0.1.0",
    "cosmiconfig": "^7.0.1",
    "date-fns": "^2.29.2",
    "esbuild": "^0.17.18",
    "execa": "^6.1.0",
    "fast-glob": "^3.2.11",
    "folder-hash": "^4.0.2",
    "fs-extra": "^10.1.0",
    "globby": "^13.1.2",
    "lodash.get": "^4.4.2",
    "rollup-plugin-delete": "^2.0.0",
    "rollup-plugin-node-externals": "^4.1.1",
    "rollup-plugin-tsconfig-paths": "^1.3.0",
    "tree-kill": "^1.2.2",
    "tsconfck": "^2.0.1",
    "typescript": "^5.0.4"
  },
  "peerDependencies": {
    "esbuild": ">=0.14.39",
    "typescript": "*"
  },
  "peerDependenciesMeta": {
    "esbuild": {
      "optional": true
    },
    "typescript": {
      "optional": true
    }
  },
  "publishConfig": {
    "access": "public",
    "directory": "lib",
    "linkDirectory": false
  }
}
