    "rollup-plugin-node-externals": "^4.1.1",
    "rollup-plugin-tsconfig-paths": "^1.5.2",
    "tree-kill": "^1.2.2",
    "tsconfck": "^3.0.0",
    "typescript": "^5.3.3"
  },
  "peerDependencies": {
    "esbuild": ">=0.14.39",
    "typescript": "*"
  },
  "peerDependenciesMeta": {
    "esbuild": {
      "optional": true
    },
    "typescript": {
      "optional": true
    }
  },
  "publishConfig": {
    "access": "public",
    "directory": "lib",
    "linkDirectory": false
  }
