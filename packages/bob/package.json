{
  "name": "bob-esbuild",
  "version": "3.0.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/PabloSzx/bob-esbuild",
    "directory": "packages/bob"
  },
  "license": "MIT",
  "author": "PabloSzx <pablosaez1995@gmail.com>",
  "exports": {
    ".": {
      "require": "./lib/index.js",
      "import": "./lib/index.mjs"
    },
    "./*": {
      "require": "./lib/*.js",
      "import": "./lib/*.mjs"
    }
  },
  "main": "lib/index.js",
  "module": "lib/index.mjs",
  "types": "lib/index.d.ts",
  "files": [
    "lib"
  ],
  "scripts": {
    "build:types": "node -r tsm build-types.ts",
    "dev": "node -r tsm self-watch.ts",
    "prepare": "node -r tsm self-build.ts",
    "postpublish": "gh-release"
  },
  "dependencies": {
    "@pnpm/exportable-manifest": "^2.1.7",
    "bob-esbuild-plugin": "workspace:2.2.0",
    "builtin-modules": "^3.2.0",
    "chalk": "^4.1.2",
    "cosmiconfig": "^7.0.1",
    "date-fns": "^2.25.0",
    "execa": "^5.1.1",
    "folder-hash": "^4.0.1",
    "fs-extra": "^10.0.0",
    "globby": "^11.0.4",
    "lodash.get": "^4.4.2",
    "rimraf": "^3.0.2",
    "rollup": "^2.59.0",
    "rollup-plugin-delete": "^2.0.0",
    "rollup-plugin-node-externals": "^2.2.0",
    "rollup-plugin-tsconfig-paths": "^1.0.15",
    "tree-kill": "^1.2.2",
    "tsconfck": "^1.1.1"
  },
  "devDependencies": {
    "@types/folder-hash": "^4.0.1",
    "@types/fs-extra": "^9.0.13",
    "@types/lodash.get": "^4.4.6",
    "@types/node": "^16.11.6",
    "@types/rimraf": "^3.0.2",
    "changesets-github-release": "^0.0.4",
    "esbuild": "^0.13.12",
    "typescript": "^4.4.4"
  },
  "peerDependencies": {
    "esbuild": "*",
    "typescript": "*"
  },
  "publishConfig": {
    "access": "public",
    "directory": "lib"
  }
}
