{
  "name": "psz-bob",
  "version": "1.0.0",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/PabloSzx/bob-esbuild.git"
  },
  "license": "MIT",
  "author": "PabloSzx <pablosaez1995@gmail.com>",
  "scripts": {
    "changeset": "changeset",
    "ci:release": "pnpm -r publish --access public --no-git-checks",
    "ci:version": "changeset version && pnpm i --no-frozen-lockfile --lockfile-only --ignore-scripts",
    "dev": "pnpm dev -r --no-sort",
    "prepare": "husky install && pnpm types",
    "pretty:all": "prettier -w \"**/*.{ts,tsx,js,cjs.mjs}\"",
    "test": "pnpm test -r",
    "types": "pnpm --filter bob-esbuild build:types"
  },
  "devDependencies": {
    "@changesets/cli": "^2.16.0",
    "@types/node": "^16.4.13",
    "esbuild": "^0.12.19",
    "husky": "^7.0.1",
    "prettier": "^2.3.2",
    "pretty-quick": "^3.1.1",
    "rimraf": "^3.0.2",
    "typescript": "^4.3.5"
  },
  "engines": {
    "pnpm": ">=6.7.1"
  },
  "pnpm": {
    "overrides": {
      "esbuild": "^0.12.19",
      "@types/node": "^16.4.13"
    }
  }
}
